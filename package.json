{
  "name": "centrifuge-faucet-be",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@maxmind/geoip2-node": "^1.4.0",
    "@polkadot/api": "^1.15.1",
    "axios": "^0.19.0",
    "bn.js": "^5.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "date-fns": "^2.12.0",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-oas-generator": "^1.0.9",
    "express-session": "^1.16.2",
    "handlebars": "^4.1.2",
    "handlebars-layouts": "^3.1.4",
    "jest": "^24.9.0",
    "juice": "^5.2.0",
    "pretty-error": "^2.1.1",
    "sequelize": "^5.17.0",
    "source-map-support": "^0.5.13",
    "sqlite3": "^4.1.1",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chokidar": "^3.0.2",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "flow-bin": "^0.106.2",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "2.0.4",
    "sequelize-cli": "^5.5.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest.setup.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "test": "jest --testEnvironment=node",
    "build": "node tools/build.js",
    "start": "node tools/run.js",
    "debug": "node --inspect tools/run.js",
    "db:migrate": "sequelize db:migrate",
    "db:seed:all": "sequelize db:seed:all",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:migrate:undo:all": "sequelize db:migrate:undo:all",
    "db:model:generate": "sequelize model:generate",
    "db:recreate": "yarn run db:migrate:undo:all && npm run db:migrate",
    "db:migration:generate": "sequelize migration:generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
